  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
      min-height: 95vh;
      display: flex;
      flex-direction: column;
    }
    .jumbotron {
      background: linear-gradient(to right, #df6706, #000102b2);
      color: #fff;
      padding: 2rem 2rem;
      margin-bottom: 0;
    }
    .jumbotron-heading {
      font-size: 4rem;
      font-weight: bold;
      color: #000102;
    }
    .jumbotron-subtitle {
      color: #000000;
    }
    .container.d-flex.align-items-center {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .logo {
      height: 100px;
    }
    .album {
      padding-top: 2rem;
      padding-bottom: 2rem;
      flex: 1;
    }
    .card {
      border: 1px solid #000000;
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.2s ease-in-out;
      display: flex;
      flex-direction: column;
    }
    .card:hover {
      transform: scale(1.05);
    }
    .card img {
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
      width: 60%;
      height: 200px;
      object-fit: cover;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    .card-body {
      background-color: #e2e2e2;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      padding: 1.5rem;
    }
    .card-title {
      font-size: 1.5rem;
      font-weight: bold;
    }
    .card-text {
      color: #000000;
      font-size: 1rem;
    }
    .btn-outline-secondary {
      border-radius: 20px;
    }
    .btn-outline-secondary:hover {
      background-color: #df830a;
      color: white;
    }
    footer {
      background-color: #343a40;
      color: white;
      padding: 1rem 0;
      margin-top: auto;
    }
    footer a {
      color: #fff;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
    .modal-full-width {
    width: 100%;
    height: 95%; /* Ajusta esta propiedad a la altura deseada */
    position: fixed;
    top: 0%; /* Ajusta la posición superior si quieres centrar verticalmente */
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0;
    padding: 0;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    transition: all 0.3s ease-in-out;
}


/* Estilos para los inputs del formulario */
.modal-body .form-control {
    border-radius: 10px;
    border: 1px solid #df6706;
}

.modal-body .form-label {
    font-weight: bold;
    color: hsl(24, 100%, 46%);
}
.modal-dialog-full-width {
      max-width: 100%;
      margin: 0;
    }
