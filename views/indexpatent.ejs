          <div class="row">
            <% if (results.length > 0) { %>
              <% results.slice(0, 9).forEach(patente => { %>
                <div class="col-md-4">
                  <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                      <h5 class="card-title"><%= patente.nombre %></h5>
                      <p class="card-text"><%= patente.tipo_patente %></p>
                      <% if (patente.fecha_solicitud) { %>
                        <p class="card-text">Fecha de Solicitud: <%= new Date(patente.fecha_solicitud).toDateString() %></p>
                      <% } else { %>
                        <p class="card-text">Fecha de Solicitud: No disponible</p>
                      <% } %>
                      <p class="card-text">Estado: <%= patente.estado_solicitud %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <button class="btn btn-sm btn-outline-secondary" onclick="showEditModal('<%= patente.idpatente %>')">Editar</button>
                          <button class="btn btn-sm btn-outline-secondary" onclick="showDetailModal('<%= patente.idpatente %>')">Ver Detalles</button>
                          <button class="btn btn-sm btn-outline-secondary" onclick="showDeleteModal('<%= patente.idpatente %>')">Eliminar</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="col">
                <p>No hay patentes para mostrar.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
