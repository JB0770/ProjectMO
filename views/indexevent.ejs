    <div class="album py-7 bg-light">
        <div class="container">
            <div class="row">
                <% if (results.length > 0) { %>
                    <% results.slice(0, 9).forEach(evento => { %>
                        <div class="col-md-3">
                            <div class="card mb-3 shadow-sm">
                                <% if (evento.foto) { %>
                                    <img src="data:image/jpeg;base64,<%= Buffer.from(evento.foto).toString('base64') %>" class="card-img-top" alt="Imagen del Evento">
                                <% } else { %>
                                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Imagen no disponible">
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= evento.nombre %></h5>
                                    <p class="card-text"><%= evento.tipoevento %></p>
                                    <% if (evento.fecha) { %>
                                        <p class="card-text">Fecha: <%= new Date(evento.fecha).toDateString() %></p>
                                    <% } else { %>
                                        <p class="card-text">Fecha: No disponible</p>
                                    <% } %>
                                    <p class="card-text">Ubicación: <%= evento.ubicacion %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-secondary" onclick="showEditModal('<%= evento.id_evento %>')">Editar</button>
                                            <% if (usuario && (usuario.rol === 'Administrador' )) { %>            
                                            <button class="btn btn-sm btn-outline-secondary" onclick="showDeleteModal('<%= evento.id_evento %>')">Eliminar</button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col">
                        <p>No hay eventos para mostrar.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<!-- Modal para crear evento -->
<div class="modal fade modal-full-width" id="createEventModal" tabindex="-1" aria-labelledby="createEventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-full-width">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createEventModalLabel">Crear Evento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createEventForm" action="/indexevent/saveevent" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="tipoevento" class="form-label">Tipo de Evento</label>
                                <input type="text" id="tipoevento" name="tipoevento" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre del Evento</label>
                                <input type="text" id="nombre" name="nombre" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="fecha" class="form-label">Fecha</label>
                                <input type="date" id="fecha" name="fecha" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ubicacion" class="form-label">Ubicación</label>
                                <input type="text" id="ubicacion" name="ubicacion" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="foto" class="form-label">Foto del Evento</label>
                                <input type="file" id="foto" name="foto" class="form-control" accept="image/jpeg, image/png">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

