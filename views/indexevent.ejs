<style>
body {
    background-color: #f8f9fa;
    font-family: 'Arial', sans-serif;
    min-height: 95vh;
    display: block;
    flex-direction: column;
}

.jumbotron {
    background: linear-gradient(to right, #df6706, #000102b2);
    color: #fff;
    padding: 2rem 2rem;
    margin-bottom: 0;
}

.jumbotron-heading {
    font-size: 4rem;
    font-weight: bold;
    color: #000102;
}

.jumbotron-subtitle {
    color: #000000;
}

.container.d-flex.align-items-center {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    height: 100px;
}

.album {
    padding-top: 2rem;
    padding-bottom: 2rem;
    flex: 1;
}
.container {
            width: calc(100% - 100px);
            margin-left: 100px;
            padding: 15px;
        }

.card:hover {
    transform: scale(1.05);
}

.card img {
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    width:90%;
    height: 150px;
    object-fit: cover;
    display: block;
    margin-left: auto;
    margin-right: auto;
}

.card {
    border: 1px solid #000000;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    display: flex;
    flex-direction: column;
}

.card-body {
    background-color: #e2e2e2;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    padding: 1.5rem;
}

.card-title {
    font-size: 1.5rem;
    font-weight: bold;
}

.card-text {
    color: #000000;
    font-size: 1rem;
}

.btn-outline-secondary {
    border-radius: 20px;
}

.btn-outline-secondary:hover {
    background-color: #df6706;
    color: white;
}

footer {
    background-color: #343a40;
    color: white;
    padding: 20px 0;
    position: relative;
    z-index: 1;
}

footer a {
    color: #fff;
    text-decoration: none;
}

footer a:hover {
    text-decoration: underline;
}

.float-right a {
    color: white;
    text-decoration: none;
}

.float-right a:hover {
    text-decoration: underline;
}

.modal-full-width {
    width: 100%;
    height: 65%;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0;
    padding: 0;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    transition: all 0.3s ease-in-out;
}

.modal-dialog-full-width {
    max-width: 100%;
    margin: 0;
}

.modal-content {
    border: none;
    border-radius: 15px 15px 0 0;
    background: #fff;
    color: #333;
}

.modal-header, .modal-footer {
    border: none;
    background: #343a40;
    color: #fff;
    padding: 1rem;
}

.modal-title {
    font-weight: bold;
}

.modal-body {
    padding: 1.5rem;
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px;
}

.modal-body .form-label {
    font-weight: bold;
    color: hsl(24, 100%, 46%);
}

.modal-body .form-control {
    border-radius: 10px;
    border: 1px solid #df6706;
}

.modal-footer .btn-primary {
    background: #df6706;
    border-color: #df6706;
}

.modal-footer .btn-primary:hover {
    background: #df6706;
    border-color: #0d0d0e;
}

.modal-footer .btn-secondary {
    background: #343a40;
    border-color: #343a40;
}

.modal-footer .btn-secondary:hover {
    background: #6c757d;
    border-color: #6c757d;
}

.modal-small-text {
    font-size: 0.9em;
}

.modal-content .form-label,
.modal-content .form-control {
    font-size: 0.8em;
}

.modal-body .col-md-6 {
    flex: 2;
    min-width: 30%;
}

.sidebar {
    height: 100%;
    width: 80px;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #f8f9fa;
    padding-top: 21px;
    border-right: 4px solid #df6706;
    transition: width 0.3s;
}

.sidebar a {
    display: block;
    text-align: center;
    padding: 20px;
    text-decoration: none;
    font-size: 20px;
    color: #333;
    transition: background-color 0.3s, color 0.3s;
}

.sidebar a:hover {
    background-color: #ddd;
    color: #df6706;
}

.sidebar a.active {
    background-color: #df6706;
    color: white;
}

.sidebar .user-profile {
    position: relative;
    bottom: 20px;
    width: 100%;
}

.event-step {
    padding: 15px;
}

.event-step-icon {
    width: 50px;
    height: 50px;
    margin-right: 15px;
}

.btn-primary {
    background-color: #df6706;
    border-color: #df6706;
}

.btn-primary:hover {
    background-color: #df6706;
    border-color: #df6706;
}

.btn-secondary {
    background-color: #343a40;
    border-color: #343a40;
}

.btn-secondary:hover {
    background-color: #6c757d;
    border-color: #6c757d;
}

footer {
    background-color: #343a40;
    color: white;
    padding: 10px 0;
    position: relative;
    z-index: 1;
}

.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer-left {
    display: flex;
    align-items: center;
}

.footer-logo {
    max-width: 50px;
    height: auto;
    margin-right: 15px;
}

.footer-right {
    text-align: right;
}

.footer-right h5 {
    margin-bottom: 5px;
}

.footer-bottom {
    border-top: 1px solid #565e64;
    padding-top: 5px;
}

.footer-bottom p {
    margin: 5px 0;
}

@media (max-width: 768px) {
    .footer-content {
        flex-direction: column;
        text-align: center;
    }

    .footer-left {
        margin-bottom: 10px;
    }

    .footer-right {
        text-align: center;
    }
}
.user-info {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            align-items: center;
            z-index: 1000; /* Asegura que esté delante de otros elementos */
            background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco semitransparente */
            padding: 5px 10px;
            border-radius: 5px;
        }



        .user-info button {
            background-color: #df6706;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .user-info button:hover {
            background-color: #b55304;}

</style>
