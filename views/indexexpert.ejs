<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banco de Expertos</h4>
            <table class="table table-dark table-striped">
                <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">Id Experto</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Especialidad</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Email</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (results && results.rows) { %>
                        <% results.rows.forEach((row) => { %>
                            <tr>
                                <td><%= row.id_experto %></td>
                                <td><a href="#" onclick="showInfoModal('<%= row.id_experto %>')"><%= row.nombre %></a></td>
                                <td><%= row.descripcion %></td>
                                <td><%= row.especialidad %></td>
                                <td><%= row.rol %></td>
                                <td><%= row.email %></td>
                                <td>
                                    <button class="btn btn-outline-info" onclick="showUpdateExpertModal('<%= row.id_experto %>')">Editar</button>
                                    <button class="btn btn-outline-danger" onclick="showDeleteExpertModal('<%= row.id_experto %>')">Borrar</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">No hay expertos disponibles</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para actualizar experto -->
<div class="modal fade modal-full-width" id="updateExpertModal" tabindex="-1" aria-labelledby="updateExpertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-full-width">
        <div class="modal-content modal-small-text">
            <div class="modal-header">
                <h5 class="modal-title" id="updateExpertModalLabel">Actualizar Experto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateExpertForm" action="/indexexpert/update" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="update_id_experto" name="id_experto">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="update_nombre" class="form-label">Nombre</label>
                                <input type="text" id="update_nombre" name="nombre" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="update_descripcion" class="form-label">Descripción Corta</label>
                                <input type="text" id="update_descripcion" name="descripcion" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="update_especialidad" class="form-label">Especialidad</label>
                                <input type="text" id="update_especialidad" name="especialidad" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="update_rol" class="form-label">Rol</label>
                                <input type="text" id="update_rol" name="rol" class="form-control" required>
